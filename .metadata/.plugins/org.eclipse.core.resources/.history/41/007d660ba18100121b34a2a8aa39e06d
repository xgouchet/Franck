package fr.xgouchet.musichelper.test;

import fr.xgouchet.musichelper.model.Tone;
import junit.framework.TestCase;

/**
 * TODO test augmented and diminished tones
 */
public class ToneTest extends TestCase {

	/**
	 * Test the {@link Tone} helper methods on the C circle of fifth
	 */
	public void testCircleOfFifth() {
		Tone value, expected;

		value = Tone.C.fourth();
		expected = Tone.F;
		assertEquals(expected, value);

		value = Tone.C.fifth();
		expected = Tone.G;
		assertEquals(expected, value);

		value = Tone.C.second();
		expected = Tone.D;
		assertEquals(expected, value); 

		value = Tone.C.sixth();
		expected = Tone.A;
		assertEquals(expected, value);

		value = Tone.C.third();
		expected = Tone.E;
		assertEquals(expected, value);

		value = Tone.C.seventh();
		expected = Tone.B;
		assertEquals(expected, value);
	}

	/**
	 * Test that, for any note x and its fourth y, the fifth of y is x
	 */
	public void testFifthFourth() {
		Tone[] values = Tone.values();

		for (Tone tone : values) {
			assertEquals(tone, tone.fourth().fifth());
		}
	}

}
